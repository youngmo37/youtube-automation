# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# YouTube Automation - 환경 변수 설정
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#
# 사용법:
# 1. 이 파일을 .env로 복사: cp .env.example .env
# 2. 아래 값들을 실제 값으로 변경
# 3. 절대 Git에 커밋하지 마세요!
#
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# n8n 인증
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_secure_password_123

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# PostgreSQL 데이터베이스
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
POSTGRES_USER=n8n
POSTGRES_PASSWORD=change_this_db_password_456
POSTGRES_DB=n8n

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Perplexity AI (리서치)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 가입: https://www.perplexity.ai/
# API 키 발급: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Azure OpenAI (대본 작성)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Azure Portal에서 발급
# https://portal.azure.com → Azure OpenAI → Keys and Endpoint
AZURE_OPENAI_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-02-01

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Google Cloud (YouTube & Sheets)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Google Cloud Console에서 OAuth 2.0 클라이언트 ID 생성
# https://console.cloud.google.com/apis/credentials

# YouTube Data API v3
YOUTUBE_CLIENT_ID=xxxxx-xxxxxx.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxxxxxxxxxx

# Google Sheets API (Service Account 사용 시)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
# Service Account JSON 키 파일 경로
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=/path/to/service-account-key.json

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 로컬 AI 서비스 설정 (선택)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Ollama 설정
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Stable Diffusion WebUI
SD_WEBUI_HOST=http://localhost:7860
SD_MODEL=sd_xl_turbo_1.0_fp16.safetensors

# Edge TTS 기본 목소리
# 한국어 목소리: ko-KR-InJoonNeural (남성), ko-KR-SunHiNeural (여성)
DEFAULT_TTS_VOICE=ko-KR-InJoonNeural

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 기타 설정
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# 타임존
TIMEZONE=Asia/Seoul

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 미디어 파일 저장 경로
MEDIA_DIR=/home/username/youtube-automation-wsl/media

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
